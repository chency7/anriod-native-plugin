<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hntq.destop.widget.library" >

    <uses-sdk android:minSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application>
        <receiver
            android:name="com.hntq.destop.widget.library.HitokotoWidget"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.hntq.destop.widget.library.ACTION_REFRESH" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/hitokoto_widget_info" />
        </receiver>
        <receiver
            android:name="com.hntq.destop.widget.library.HotSearchWidget"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.hntq.destop.widget.library.ACTION_HOT_REFRESH" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/hot_search_widget_info" />
        </receiver>
    </application>

</manifest>