<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rain_rank_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_schedule_widget"
    android:padding="@dimen/widget_padding">

    <LinearLayout
        android:id="@+id/rain_rank_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_rain_rank_title"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/rain_rank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/rain_rank_widget_title"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rain_rank_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="近1小时"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/rain_rank_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rain_rank_header"
        android:layout_marginTop="10dp"
        android:layout_above="@id/rain_rank_footer"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/rain_rank_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rain_rank_header"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="暂无数据"
        android:textColor="#CCFFFFFF"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rain_rank_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/rain_rank_widget_footer"
        android:textColor="#CCFFFFFF"
        android:textSize="11sp" />

</RelativeLayout>
